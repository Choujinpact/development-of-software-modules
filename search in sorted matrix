/**
 * Функция для поиска элемента в отсортированной матрице
 * Матрица отсортирована по строкам и столбцам (каждая строка и каждый столбец отсортированы)
 *
 * @param {number[][]} matrix - Отсортированная матрица
 * @param {number} target - Элемент для поиска
 * @returns {number[]} - Массив с индексами [row, column] или [-1, -1] если элемент не найден
 */
function searchInSortedMatrix(matrix, target) {
  // Проверяем, что матрица не пустая
  if (!matrix || matrix.length === 0 || matrix[0].length === 0) {
    return [-1, -1]
  }

  // Начинаем поиск с правого верхнего угла матрицы
  let row = 0 // начинаем с первой строки
  let col = matrix[0].length - 1 // начинаем с последнего столбца

  // Пока не вышли за границы матрицы
  while (row < matrix.length && col >= 0) {
    const currentElement = matrix[row][col]

    // Если нашли нужный элемент
    if (currentElement === target) {
      return [row, col] // возвращаем индексы
    }
    // Если текущий элемент больше целевого, двигаемся влево
    else if (currentElement > target) {
      col-- // уменьшаем столбец (двигаемся влево)
    }
    // Если текущий элемент меньше целевого, двигаемся вниз
    else {
      row++ // увеличиваем строку (двигаемся вниз)
    }
  }

  // Если элемент не найден
  return [-1, -1]
}

// Пример использования
const sortedMatrix = [
  [1, 4, 7, 11],
  [2, 5, 8, 12],
  [3, 6, 9, 16],
  [10, 13, 14, 17],
]

console.log(searchInSortedMatrix(sortedMatrix, 9)) // [2, 2]
console.log(searchInSortedMatrix(sortedMatrix, 15)) // [-1, -1]
